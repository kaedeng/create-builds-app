FROM maven:3.9.9-eclipse-temurin-17-focal AS build

ARG SPRING_DATASOURCE_URL
ARG SPRING_DATASOURCE_USERNAME
ARG SPRING_DATASOURCE_PASSWORD

ENV SPRING_DATASOURCE_URL=${SPRING_DATASOURCE_URL}
ENV SPRING_DATASOURCE_USERNAME=${SPRING_DATASOURCE_USERNAME}
ENV SPRING_DATASOURCE_PASSWORD=${SPRING_DATASOURCE_PASSWORD}

ARG GOOGLE_ID
ARG GOOGLE_SECRET_ID

ENV GOOGLE_ID=${GOOGLE_ID}
ENV GOOGLE_SECRET_ID=${GOOGLE_SECRET_ID}

ARG AMAZON_ID
ARG AMAZON_SECRET_ID

ENV AMAZON_ID=${GOOGLE_ID}
ENV AMAZON_SECRET_ID=${GOOGLE_SECRET_ID}

ARG GH_CLIENT_ID
ARG GH_CLIENT_SECRET

ENV GH_CLIENT_ID=${GH_CLIENT_ID}
ENV GH_CLIENT_SECRET=${GH_CLIENT_SECRET}

COPY src /home/app/src
COPY pom.xml /home/app
RUN mvn -f /home/app/pom.xml clean package

FROM eclipse-temurin:17-jdk-focal
COPY --from=build /home/app/target/*.jar /usr/local/lib/app.jar
EXPOSE 8080
ENTRYPOINT ["java", "-jar", "/usr/local/lib/app.jar"]